{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@redux/*": [ "redux/*" ],
      "@component/*": [ "component/*" ],
      "@styles/*": [ "styles/*" ],
      "@lib/*": [ "lib/*" ],
      "@schema/*": [ "schema/*" ],
      "@utils/*": [ "utils/*" ],
      "@hooks/*": [ "hooks/*" ],
      "@api/*": [ "api/*" ],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
